<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_sono_obstetric_document">
        <t t-call="web.external_layout">
            <div class="page col-xs-offset-2"
                style="margin-left:50px !important;margin-right:30px !important;">
                <div class="mt64 oe_structure" />

                <div class="col-md-12 mt32">
                    <font color="white">...</font>
                </div>

                <div class="row mt32 mb32">
                    <div class="col-md-12" style="border: 1px solid black; border-radius: 6px;">
                        <table class="table">
                            <tr>
                                <td style="border: none;">
                                    <strong>Name: </strong>
                                    <span t-field="o.patient_id.name" />
                                </td>
                                <td style="border: none;">
                                    <strong>Date: </strong>
                                    <span t-field="o.date" />
                                </td>
                            </tr>
                            <tr>
                                <td style="border: none;">
                                    <strong>LMP: </strong>
                                    <span t-field="o.lmp" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div>
                    <div class="col-xs-7 col-xs-offset-3 text-center" style="border: 1px solid black; border-radius: 25px;">
                        <h3>
                            <strong>OBSTETRIC ULTRA SONOGRAPHY</strong>
                        </h3>
                    </div>
                </div>

                <table class="table">
                    <tr>
                        <td style="border: none;">
                            1. L.M.P:
                            <span t-field="o.lmp" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            2. No. Of Fetues:
                            <span t-field="o.fetues" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;" class="col-xs-4">
                            3. Presentation:
                            <span t-field="o.presentation" />
                        </td>
                        <td style="border: none;" class="col-xs-4">Position: </td>
                    </tr>
                    <tr>
                        <td style="border: none;" class="col-xs-4">
                            4. Cardiac Activity:
                            <span t-field="o.cardiac_activity" />
                        </td>
                        <td style="border: none;" class="col-xs-74">
                            FHR:
                            <span t-field="o.fhr" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            5. Fetal Movement:
                            <span t-field="o.fetal_movement" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            6. Placenta:
                            <span t-field="o.placenta" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            7. Amniotic Fluid:
                            <span t-field="o.amniotic_fluid" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">8. Fetal Parameter: </td>
                    </tr>
                </table>
                <table class="table" border="1" style="border: 1px solid black;">
                    <thead>
                        <tr style="background : #BFCDCD;">
                            <th class="text-center" style="border: 1px solid black;">BPD</th>
                            <th class="text-center" style="border: 1px solid black;">FL.</th>
                            <th class="text-center" style="border: 1px solid black;">HC</th>
                            <th class="text-center" style="border: 1px solid black;">AC</th>
                            <th class="text-center" style="border: 1px solid black;">CRL</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="border: 1px solid black;">
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.bpd" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.fl" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.hc" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.ac" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.crl" />
                                m.m
                            </td>
                        </tr>
                        <tr style="border: 1px solid black;">
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                        </tr>
                        <tr style="border: 1px solid black;">
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.bpd_weeks" />
                                <font color="white">.........</font>
                                <span t-field="o.bpd_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.fl_weeks" />
                                <font color="white">.........</font>
                                <span t-field="o.fl_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.hc_weeks" />
                                <font color="white">.........</font>
                                <span t-field="o.hc_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.ac_weeks" />
                                <font color="white">.........</font>
                                <span t-field="o.ac_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="o.crl_weeks" />
                                <font color="white">.........</font>
                                <span t-field="o.crl_days" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <table class="table">
                    <tr>
                        <td class="col-xs-4" style="border: none;">
                            9. Average Estimated Fetal Age:
                            <span t-field="o.fetal_age" />
                        </td>
                        <td class="col-xs-4" style="border: none;">
                            EDD:
                            <span t-field="o.edd" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            10. Estimated Fetal Weight:
                            <span t-field="o.fetal_weight" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            11. Cervix: Length:
                            <span t-field="o.cerrvix_lenght" />
                            mm
                        </td>
                        <td style="border: none;">
                            Width:
                            <span t-field="o.cerrvix_width" />
                            mm
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            12. Internal OS:
                            <span t-field="o.internalos" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            13. Any Sonographically detectable fetal anomaly:
                            <span t-field="o.sono_fetal_anomaly" />
                        </td>
                    </tr>
                </table>
                <div class="col-md-12 mb8">
                    <span>
                        <strong>I HAVE NEITHER DETECTED NOR DISCLOSED THE SEX FOR HER
                            FOETUS TO ANY BODY IN ANY MANNER</strong>
                    </span>
                </div>
                <div class="col-md-12">
                    <span>
                        <u>Impression:</u>
                    </span>
                    <strong>
                        <span t-field="o.impression" />
                    </strong>
                </div>

                <div class="oe_structure" />
            </div>
        </t>
    </template>

    <template id="report_sono_obstetric">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="acs_hms_gynec.report_sono_obstetric_document" />
            </t>
        </t>
    </template>

    <record id="action_report_sono_obstetric" model="ir.actions.report">
        <field name="name">Sonography Obstetric Reports</field>
        <field name="model">hms.appointment.sonography.obstetric</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_hms_gynec.report_sono_obstetric</field>
        <field name="report_file">acs_hms_gynec.report_sono_obstetric</field>
        <field name="binding_model_id" ref="model_hms_appointment_sonography_obstetric"/>
        <field name="binding_type">report</field>
    </record>

</odoo>